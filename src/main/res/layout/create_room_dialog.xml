<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/application_theme_background_blue"
            android:backgroundTint="@color/application_theme_background_blue"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="Enter Room Name"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/roomNameTextField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/input_field_background"
            android:ems="10"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:hint="Enter room name"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/createRoomConfirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/application_theme_background_blue"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="CREATE ROOM"
            android:textSize="20dp"
            app:cornerRadius="5dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>